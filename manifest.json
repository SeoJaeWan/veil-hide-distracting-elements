{
  "manifest_version": 3,
  "name": "Veil - Hide Distracting Elements",
  "version": "1.0.0",
  "description": "Click to hide any distracting element on websites. Create custom presets for distraction-free browsing.",

  "permissions": ["storage", "activeTab", "scripting", "sidePanel"],

  "action": {
    "default_title": "Open Veil Side Panel"
  },

  "side_panel": {
    "default_path": "popup/popup.html"
  },

  "background": {
    "service_worker": "background/background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "shared/constants.js",
        "shared/utils.js",
        "shared/store.js",
        "content/content.js"
      ],
      "css": ["content/content.css"],
      "run_at": "document_end"
    }
  ],

  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
